<div class="main-content">
    <h1>Welcome back, {{user.name}}!</h1>

    <h2>Your Careers</h2>
    {{#if careers.length}}
      <ul>
        {{#each careers}}
          <li>{{this.title}} at {{this.company}} - {{this.status}}</li>
        {{/each}}
      </ul>
    {{else}}
      <p>No career data found.</p>
    {{/if}}

    <h2>Your Vacations</h2>
    {{#if vacations.length}}
      <ul>
        {{#each vacations}}
          <li>{{this.destination}} from {{this.startDate}} to {{this.endDate}}</li>
        {{/each}}
      </ul>
    {{else}}
      <p>No vacations found.</p>
    {{/if}}

    <h2>Your Events</h2>
    {{#if events.length}}
      <ul>
        {{#each events}}
          <li>{{this.title}} on {{this.date}}</li>
        {{/each}}
      </ul>
    {{else}}
      <p>No events found.</p>
    {{/if}}

    <h2>Your Shopping Lists</h2>
    {{#if shoppingLists.length}}
      <ul>
        {{#each shoppingLists}}
          <li>{{this.item}} - {{this.quantity}}</li>
        {{/each}}
      </ul>
    {{else}}
      <p>No items in your shopping list.</p>
    {{/if}}
</div>

<style>
  /* Sidebar styles */
  .sidebar {
    position: fixed; /* Fix the sidebar to the left of the page */
    top: 0;
    left: 0;
    width: 250px;
    height: 100vh; /* Full height */
    background-color: #29231D;
    color: #FEFBF6;
    padding: 20px;
    overflow-y: auto; /* Make it scrollable if content exceeds */
  }

  /* Main content styles */
  .main-content {
    margin-left: 270px; /* Offset the main content to make space for the sidebar */
    padding: 20px;
    background-color: #FEFBF6;
    min-height: 100vh;
  }

  /* Styling for list sections */
  h1, h2 {
    color: #29231D;
  }

  ul {
    list-style-type: none;
    padding: 0;
  }

  ul li {
    background-color: #97AFAF;
    margin: 10px 0;
    padding: 10px;
    border-radius: 5px;
    color: #29231D;
  }

  /* Responsive styling */
  @media screen and (max-width: 768px) {
    .sidebar {
      width: 100%; /* Make sidebar full width on smaller screens */
      height: auto;
      position: relative;
    }

    .main-content {
      margin-left: 0; /* Remove the margin on small screens */
    }
  }
</style>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const sidebarToggle = document.querySelector('.sidebar-toggle'); // Assuming you have a sidebar toggle button
    const sidebar = document.querySelector('.sidebar');

    sidebarToggle.addEventListener('click', function() {
      sidebar.classList.toggle('open');
    });
  });
</script>
