<div class="main-content">
    <h1>Welcome back, {{user.name}}!</h1>

    <h2>Your Careers</h2>
    {{#if careers.length}}
      <ul>
        {{#each careers}}
          <li>{{this.title}} at {{this.company}} - {{this.status}}</li>
        {{/each}}
      </ul>
    {{else}}
      <p>No career data found.</p>
    {{/if}}

    <h2>Your Vacations</h2>
    {{#if vacations.length}}
      <ul>
        {{#each vacations}}
          <li>{{this.destination}} from {{this.startDate}} to {{this.endDate}}</li>
        {{/each}}
      </ul>
    {{else}}
      <p>No vacations found.</p>
    {{/if}}

    <h2>Your Events</h2>
    {{#if events.length}}
      <ul>
        {{#each events}}
          <li>{{this.title}} on {{this.date}}</li>
        {{/each}}
      </ul>
    {{else}}
      <p>No events found.</p>
    {{/if}}

    <h2>Your Shopping Lists</h2>
    {{#if shoppingLists.length}}
      <ul>
        {{#each shoppingLists}}
          <li>{{this.item}} - {{this.quantity}}</li>
        {{/each}}
      </ul>
    {{else}}
      <p>No items in your shopping list.</p>
    {{/if}}
</div>
