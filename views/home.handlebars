<div class="main-content">
    <h1>Welcome back, {{user.name}}!</h1>

    <h2>Your Careers</h2>
    {{#if careers.length}}
      <ul>
        {{#each careers}}
          <li>{{this.title}} at {{this.company}} - {{this.status}}</li>
        {{/each}}
      </ul>
    {{else}}
      <p>No career data found.</p>
    {{/if}}

    <h2>Your Vacations</h2>
    {{#if vacations.length}}
      <ul>
        {{#each vacations}}
          <li>{{this.destination}} from {{this.startDate}} to {{this.endDate}}</li>
        {{/each}}
      </ul>
    {{else}}
      <p>No vacations found.</p>
    {{/if}}

    <h2>Your Events</h2>
    {{#if events.length}}
      <ul>
        {{#each events}}
          <li>{{this.title}} on {{this.date}}</li>
        {{/each}}
      </ul>
    {{else}}
      <p>No events found.</p>
    {{/if}}

    <h2>Your Shopping Lists</h2>
    {{#if shoppingLists.length}}
      <ul>
        {{#each shoppingLists}}
          <li>{{this.item}} - {{this.quantity}}</li>
        {{/each}}
      </ul>
    {{else}}
      <p>No items in your shopping list.</p>
    {{/if}}
</div>

<style>
  :root {
    --main-bg-color: #a1abad;
    --accent-color: #d9eef8;
    --text-color: #333;
    --hover-bg-color: #e0e7ff;
}

.main-content {
    background-color: var(--main-bg-color);
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: background-color 0.3s;
}

h1, h2 {
    color: var(--text-color);
    font-family: 'Arial', sans-serif;
}

ul {
    list-style-type: none;
    padding: 0;
}

li {
    background-color: #ffffff;
    border: 1px solid #ddd;
    padding: 10px;
    margin: 10px 0;
    border-radius: 5px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: transform 0.3s ease, background-color 0.3s ease;
}

li:hover {
    transform: scale(1.02);
    background-color: var(--hover-bg-color);
}

h2 {
    position: relative;
    font-size: 1.5rem;
}

h2::after {
    content: "";
    display: block;
    width: 60px;
    height: 4px;
    background-color: var(--accent-color);
    margin-top: 8px;
}

p {
    color: var(--text-color);
}
.hidden {
    display: none;
}
h2 {
    cursor: pointer;
    transition: color 0.3s;
}

h2:hover {
    color: var(--accent-color);
}
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

ul li {
    animation: fadeIn 0.5s ease forwards;
}

</style>